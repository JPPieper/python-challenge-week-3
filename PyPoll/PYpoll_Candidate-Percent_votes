import csv
import os

file_path = "C:/Users/Owner/OneDrive/Desktop/boot camp homework repo/python-challenge week 3/PyPoll/Resources/election_data.csv"
total_votes = 0
Candidate_Names = []

# Load the dataset
with open(file_path, 'r') as csv_file:
    csv_reader = csv.reader(csv_file, delimiter=",")
    csv_header = next(csv_reader)  # Skip the header row

    # Iterate through the dataset and extract candidate names
    for row in csv_reader:
        total_votes += 1
        candidate = row[2]  # Assuming 'Candidate' is in the third column (index 2)

        # Check if the candidate is not already in the Candidate_Names list
        if candidate not in Candidate_Names:
            Candidate_Names.append(candidate)

# Print the total number of votes
print("Total Votes:", total_votes)

# Print the list of unique candidate names
print("List of unique candidates who received votes:")
for candidate in Candidate_Names:
    print(candidate)